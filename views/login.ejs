<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <title>Login Page</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css">
   
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap');

      *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        text-decoration: none;
      }

      body{
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: url('../img/bg3.jpg');
      }

      input.ng-invalid.ng-dirty{
          border-bottom: 2px solid rgb(228, 64, 64);
      }

      .form{
        z-index: 1;
        font-family: "Poppins", sans-serif;
        position: absolute;
        width: 420px;
        text-align: center;
        background-color: rgba(0, 0, 0, 0.342);
        padding: 40px;
      }

      .form i{
        z-index: 1;
        color: rgb(230, 219, 219);
        font-size: 60px;
        margin-bottom: 30px;
      }
      .home i{
        font-size: 30px;
        margin-right: 300px;
        color: orange;
        margin-bottom: -40px;
      }
      .form .signup-form{
        display: none;
      }

      .form .user-input{
        width: 320px;
        height: 55px;
        margin-bottom: 30px;
        outline: none;
        border: none;
        background: rgba(68, 67, 67, 0.2);
        color: #fff;
        font-size: 18px;
        text-align: center;
        border-radius: 5px;
        transition: 0.5s;
        transition-property: border-left, border-right, box-shadow;
      }

      .form .user-input:hover, .form .user-input:focus, .form .user-input:active{
        border-left: solid 8px #f49842;
        border-right: solid 8px #f49842;
        box-shadow: 0 0 100px rgba(66, 133, 244, 0.8);
      }

      .form .options-01{
        margin-bottom: 50px;
      }

      .form .options-01 input{
        width: 15px;
        height: 15px;
        margin-right: 5px;
      }

      .form .options-01 .remember-me{
        color: rgb(228, 212, 212);
        font-size: 14px;
        display: flex;
        align-items: center;
        float: left;
        cursor: pointer;
      }

      .form .options-01 a{
        color: rgb(219, 214, 214);
        font-size: 14px;
        font-style: italic;
        float: right;
      }

      .form .btn{
        outline: none;
        border: none;
        width: 320px;
        height: 55px;
        background: #eb7e18;
        color: #fff;
        font-size: 18px;
        letter-spacing: 1px;
        border-radius: 5px;
        cursor: pointer;
        transition: 0.5s;
        transition-property: border-left, border-right, box-shadow;
      }

      .form .btn:hover{
        border-left: solid 8px rgba(255, 255, 255, 0.5);
        border-right: solid 8px rgba(255, 255, 255, 0.5);
        box-shadow: 0 0 100px rgba(244, 137, 66, 0.8);
      }

      .form .options-02{
        color: #bbb;
        font-size: 14px;
        margin-top: 30px;
      }

      .form .options-02 a{
        color: #f4bc42;
      }

      /* Responsive CSS */

      @media screen and (max-width: 500px){
        .form{
          width: 95%;
        }

        .form .user-input{
          width: 100%
        }

        .form .btn{
          width: 100%;
        }
      }
    </style>
  </head>
  <body>
    <!--form area start-->
    <div class="form">
      <!--login form start-->
      <div class="home"><a href="index"><i class="fa fa-home" aria-hidden="true"></i></a></div>
      <form class="login-form" action="/login" name="form1" method="post" ng-app="myApp" ng-controller="validateCtrl" novalidate>
        <i class="fas fa-user-circle"></i>
        <input class="user-input" type="text" placeholder="Username" ng-model="user" name="username" class="input" required>
        <span style="color:red" ng-show="form1.user.$dirty">
        </span>
        <input class="user-input" type="password" placeholder="Password" name="password" ng-model="password" id="pass" required>
        <span style="color:red" ng-show="form1.password.$dirty && form1.password.$invalid">
        </span>
        <div class="options-01">
          <label class="remember-me"><input type="checkbox" name="">Remember me</label>
          <a href="#">Forgot your password?</a>
        </div>
        <button type="submit" class="btn">LOGIN</button>
        <!-- <input class="btn" type="button" name="" value="LOGIN" onclick="myFunc()"> -->
        <div class="options-02">
          <p>Not Registered? <a href="/register">Create an Account</a></p>
        </div>
      </form>
    </div>
    <!--form area end-->


  </body>
  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js" charset="utf-8"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.0/angular.min.js"></script>
  <script>
      var app = angular.module('myApp', []);
      app.controller('validateCtrl', function($scope) {
        $scope.user = '';
        $scope.password = '';
      });
  </script>
  
  <script type="text/javascript">
    $('.options-02 a').click(function(){
      $('form').animate({
        height: "toggle", opacity: "toggle"
      }, "slow");
    });
    </script>
</html>
