        text-transform:uppercase;
        height:35px;
        width:85px;
        border: 1px solid #5E5E5E;
        border-radius:5px;

      }

      input.quizSubmit[type="submit"]:hover {
        color: #ffffff;
        background: #694de7;
        text-decoration: none;
      }

      table {
        background-color: #F2F2F2;
          border:1px solid #BDBDBD;
        border-radius:5px;
        padding:10px;
        padding-left:25px;
        box-shadow: rgba(0, 0, 0, 0.498039) 0px 0px 1px 0px;
      }


      .submitter {
          width:85px;
      }

      .hide {
          display:none;
      }
